doctype html
html
  head
    title Push Server
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="public/css/bootstrap.min.css")
    link(rel="stylesheet", href="public/css/select2.css")
    link(rel="stylesheet", href="public/css/toastr.min.css")
    link(rel="stylesheet", href="public/css/codemirror-3.13.css")
    link(rel="stylesheet", href="public/css/monokai.css")
    link(rel="stylesheet", href="public/css/style.css")
    script(src="public/js/jquery-2.1.1.min.js")
    script(src="public/js/select2.min.js")
    script(src="public/js/select2_locale_fr.js")
    script(src="public/js/toastr.min.js")
    script(src="public/js/codemirror-3.13.js")
    script(src="public/js/javascript-3.13.js")
    script(src="public/js/push.js")
  body
    .navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target=".navbar-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#{baseUrl}") Push Server
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href="#{baseUrl}") Send
            li
              a(href="#{baseUrl}/version") Version
        // /.nav-collapse
    .container
      .row
        .offset2.span8
          form#pushForm.form-horizontal(action="", method="POST")
            .control-group.col-md-8
              .controls
                select#users(name="users", multiple="", style="width: 100%")
            .col-md-4
              input#sendPush.btn.btn-primary(type="submit", style="width: 100%;", value="Send!")
            div
              .control-group.col-md-6
                label.control-label(for="androidOptions") Android: 
                .json-container
                  textarea#androidOptions.json-textarea.source.input-xlarge(name="androidOptions")
                    | {
                    | "collapseKey": "optional",
                    | "data": {
                    | "message": "Notification de test du service technique."
                    | }
                    | }
              .control-group.col-md-6
                label.control-label(for="iosOptions") IOS: 
                .json-container
                  textarea#iosOptions.json-textarea.source.input-xlarge(name="iosOptions")
                    | {
                    | "badge": 0,
                    | "alert": "Notification de test du service technique.",
                    | "sound": "default"
                    | }
            div(style="clear:both")